
@model List<EmployeeGetVM>
<div class="container">
	<div class="row">
		<div class="col-2">
			<a asp-action="Create" class="btn btn-success">Create</a>
		</div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">FirstName</th>
					<th scope="col">LastName</th>
					<th scope="col">Position</th>
					<th scope="col">ImagePath</th>
					<th scope="col">Description</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var employee in Model)
				{
					<tr>
						<th scope="row">@employee.Id</th>
						<td>@employee.FirstName</td>
						<td>@employee.LastName</td>
						<td>@employee.PositionName</td>
						<td>@employee.ImagePath</td>
						<td>@employee.Description</td>
						<td>
							<a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
							<a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Update</a>
						</td>
					</tr>
				}
				
				
			</tbody>
		</table>
	</div>
</div>
